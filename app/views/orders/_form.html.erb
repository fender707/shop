<p id="notice"><%= notice %></p>

<%= form_for(@order, :class => 'form-horizontal') do |f| %>
  <% if @order.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@order.errors.count, "error") %> prohibited this rorde from being saved:</h2>
      <ul>  
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, :class => 'control-label col-sm-2' %><br /> 
    <%= f.text_field :name, :class => 'form-control', size: 40 %>
  </div>
  <div class="form-group">
    <%= f.label :country_id, :class => 'control-label col-sm-2' %><br /> 
    <%= f.collection_select :country_id, Country.order(:name), :id, :name, include_blank: true %>
  </div>
  <div class="form-group">
    <%= f.label :state_id, :class => 'control-label col-sm-2' %><br /> 
    <%= f.grouped_collection_select :state_id, Country.order(:name), :states, :name, :id, :name, include_blank: true %>
  </div>

  <div class="form-group">
    <%= f.label :address, :class => 'control-label col-sm-2' %><br />
    <%= f.text_area :address, :class => 'form-control', size: 40, rows: 3,cols: 38 %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class => 'control-label col-sm-2' %><br />
    <%= f.text_field :email, size: 40, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Place Order', :class => 'btn btn-default' %><br />
  </div>

<% end %>


