
<h1>Listing orders</h1>

<table>
  <tr>
      <th>Name</th>
      <th>Country</th>
      <th>State</th>
      <th>Address</th>
      <th>Email</th>
      <th class="offset">Destroy</th>

  </tr>

<% @orders.each do |order| %>
  <tr class="offset">
    <td><%= order.name %></td>
    <td><%= order.country_id %></td>
    <td><%= order.state_id %></td>
    <td><%= order.address %></td>
    <td><%= order.email %></td>
    <td><%= link_to 'Destroy',order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>
<br />

<%= link_to 'New Order', new_order_path %>
<p><%= will_paginate @orders %></p>

